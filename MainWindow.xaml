<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="My First WPF application!" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.497,0.462"/>
        <RadioButton x:Name="HelloButton" Content="Hey!" IsChecked="True" HorizontalAlignment="Left" Margin="250,140,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodByeButton" Content="See ya later" HorizontalAlignment="Left" Margin="452,140,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click"/>

    </Grid>
</Window>
